<div class="row">
  <div class="offset-md-3 col-md-6 col-sm-12">
        <div class="login" id="contentArea">
            <h1 class = "display-1 text-center">Register</h1>
            <br/>
              <!-- message area -->
              <% if(messages.length > 0){ %>
                <div class = "alert alert-danger"id="messageArea">
                  <%= messages %>
                </div>
                  <% } %>
            <form class = "formBackground" id="registerForm" novalidate method="POST">
              <div class="form-group mt-4">
                <div class="row">
                  <p class= "fs-5 text-center"><i class="fas fa-user-shield "></i> Personal Information</p>
                  <div class="col-md-6">
                    <input class="form-control" type="text" name="FirstName" id="firstName" placeholder="First Name" required>
                  </div>
                  <div class="col-md-6">
                    <input class="form-control" type="text" name="LastName" id="lastName" placeholder="Last Name" required>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-12">
                    <input type="email" class="form-control" id="emailAddress" name="EmailAddress" required
                    value="" placeholder="Email Address">
                  </div>
                </div>
              </div>

              <div class="form-group mt-4">
                <div class="row">
                  <p class= "fs-5 text-center"><i class="fas fa-database fa-fw"></i> System Identification</p>
                  <div class="col-md-12">
                    <input type="text" class="form-control" id="username" name="username"  required
                    value="" placeholder="Username">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-12">
                    <input type="password" class="form-control" id="password" name="password"  required
                    value="" placeholder="Password">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-md-12">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                    value="" placeholder="Confirm Password">
                  </div>
                </div>
              </div>
               
                                                  
              <div class="text-end mt-2">
                <button id="submitButton" type="submit" class="btn btn-success">Register</button>
                <button id="cancelButton" type="reset" class="btn btn-warning"> Cancel</button>
              </div>
              <p class="text-center fw-bold">
              Already have an account? 
              <a href="/login">Sign in</a>
              </p>
            </form>
           
        </div>
        
  </div>
</div>