<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
          <div class="login" id="contentArea">
              <h1 class = "display-1 text-center">Login</h1>
              <!-- message area -->
              <% if(messages.length > 0){ %>
                <div class = "alert alert-danger"id="messageArea">
                  <%= messages %>
                </div>
                  <% } %>
              <form class = "formBackground" id="loginForm" novalidate method = "POST">               
                <div class="form-group mb-2">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="fa fa-user fa-lg fa-fw">
                      </i>
                    </span>
                    <input type="text" class="form-control inputMargin" id="username" name="username"  required
                    value="" placeholder="Enter your username">
                  </div>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <span class="input-group-addon">
                      <i class="fa fa-lock fa-lg fa-fw">
                      </i>
                    </span>
                    <input type="password" class="form-control inputMargin" id="password" name="password"  required
                    value="" placeholder="Enter your password">
                  </div> 
                </div>                                        
                <div class="text-end">
                  <button id="loginButton" type="submit" class="btn btn-success btn-md">Login</button>
                  <button id="cancelButton" type="reset" class="btn btn-warning btn-md">Cancel</button>
                </div>
                <p class="text-center fw-bold">
                  Don't have an account? 
                  <a href="/register">Register Here!</a>
              </p>
              </form>   
    </div>
</div>